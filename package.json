{
  "name": "cfclaude",
  "version": "1.1.0",
  "description": "Claude Code / Qwen Code 多模型切换工具 - 支持 8 大 AI 服务商",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "build:mac": "electron-builder --mac"
  },
  "author": {
    "name": "violettoolssite",
    "email": "violettools.site@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/violettoolssite/CFclaude.git"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "png-to-ico": "^3.0.1",
    "sharp": "^0.34.5"
  },
  "build": {
    "appId": "com.cfclaude.app",
    "productName": "CFclaude",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "publish": null,
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": ["x64"]
        },
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "icon.ico"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ],
      "icon": "icon.png",
      "category": "Development"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "icon.icns",
      "category": "public.app-category.developer-tools"
    },
    "files": [
      "main.js",
      "index.html",
      "styles.css",
      "renderer.js"
    ]
  }
}
