{
  "name": "cfclaude",
  "version": "2.0.0",
  "description": "CF Coder 桌面版 - 多模型 AI 编程助手",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "prebuild": "cd cfclaude-cli && npm run build",
    "build": "electron-builder --win",
    "build:win": "npm run prebuild && electron-builder --win",
    "build:linux": "npm run prebuild && electron-builder --linux",
    "build:mac": "npm run prebuild && electron-builder --mac",
    "postinstall": "cd cfclaude-cli && npm install --legacy-peer-deps"
  },
  "author": {
    "name": "violettoolssite",
    "email": "violettools.site@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/violettoolssite/CFclaude.git"
  },
  "devDependencies": {
    "electron": "^28.2.0",
    "electron-builder": "^24.13.3",
    "png-to-ico": "^3.0.1",
    "sharp": "^0.34.5"
  },
  "dependencies": {
    "axios": "^1.7.7"
  },
  "build": {
    "appId": "com.cfclaude.app",
    "productName": "CFclaude",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "publish": null,
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": ["x64"]
        },
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "icon.ico"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ],
      "icon": "icon.png",
      "category": "Development"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "icon.icns",
      "category": "public.app-category.developer-tools"
    },
    "files": [
      "main.js",
      "index.html",
      "styles.css",
      "renderer.js",
      "cfclaude-cli/dist/**/*",
      "cfclaude-cli/package.json"
    ],
    "extraResources": [
      {
        "from": "cfclaude-cli/dist",
        "to": "cfclaude-cli/dist",
        "filter": ["**/*"]
      },
      {
        "from": "cfclaude-cli/package.json",
        "to": "cfclaude-cli/package.json"
      }
    ]
  }
}
